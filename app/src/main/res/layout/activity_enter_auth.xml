<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.saiyi.smartkeycabinet.config.ui.EnterAuthActivity">

    <TextView
        android:id="@+id/titile_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="50dp"
        android:textColor="@color/white"
        android:textSize="34dp"
        android:text="请选择验证方式"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/choose_type_bg"/>

        <LinearLayout
            android:id="@+id/select_auth_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/card_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="19dp"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/card_iv"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/shibie001"/>

                <TextView
                    android:id="@+id/card_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="27dp"
                    android:textSize="28dp"
                    android:textColor="@color/white"
                    android:text="刷卡信息"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fingerprint_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/fingerprint_iv"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/shibie002"/>

                <TextView
                    android:id="@+id/fingerprint_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="27dp"
                    android:textSize="28dp"
                    android:textColor="@color/white"
                    android:text="指纹信息"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/face_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/face_iv"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/shibie003"/>

                <TextView
                    android:id="@+id/face_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="27dp"
                    android:textSize="28dp"
                    android:textColor="@color/white"
                    android:text="人脸信息"/>
            </LinearLayout>

            <TextView
                android:id="@+id/enter_complate_btn"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:layout_alignLeft="@+id/face_ll"
                android:layout_below="@+id/face_ll"
                android:layout_marginTop="51dp"
                android:clickable="true"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="24dp"
                android:text="完成"
                android:background="@drawable/wen"
                />
        </LinearLayout>

    </FrameLayout>

</LinearLayout>
